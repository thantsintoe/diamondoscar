<input type=hidden name='lg-setting' id='lg-setting' value='<%=  currentLanguage%>'>

<div class='row flash-message-notification'>
    <% if(error && error.length > 0) { %>
        <div class="col-md-12">
	        <div class="alert alert-danger" role="alert">
	           <h4><%=  error %></h4>
	        </div>
        </div>
    <% } %>
    
   
    <% if(success && success.length > 0) { %>
	    <div class='col-md-12'>
	        <div class="alert alert-success" role="alert">
	           <h4><%=  success %></h4>
	        </div>
	    </div>
    <% } %>
    
</div>
