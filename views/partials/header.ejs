<!--Second-Nav Bar-->

<div class='second-navbar'>
    <div class='container-fluid'>
    <form action='/search' method='POST' class="navbar-form navbar-left">
            <div class="input-group search-group">
                  <input type="text" class="form-control" id='search-box' aria-label="Search" name='q' placeholder="Search">
                  <div class="input-group-btn">
                        
                        <button type="submit" class="btn btn-default multilanguage" id='search-button'><%= __('Search') %></button>
                  </div>
            </div>
    </form>

        <div class='collapse navbar-collapse' id="bs-example-navbar-collapse-1">
            <ul class='nav navbar-nav navbar-right'>
                    <% if(!currentUser) { %>
	                	<a href='/mm' id='mm_language_icon'><img src="/images/homepage/myanmar_icon.png" style="width:30px;height:20px"></a>
