<!DOCTYPE html>
<html>
<head>
	<title>E-Commerce</title>
	<meta content="text/html; charset=utf-8">
	<meta name='viewport' content='width=device-width,initial-scale=1'>
	<link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet'>
	<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700" rel="stylesheet">
	<link href="https://fonts.googleapis.com/earlyaccess/notosansmyanmar.css" rel="stylesheet">
	
	<link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="/stylesheets/star-rating.css" media="all" rel="stylesheet" type="text/css" />
 
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.js"></script>
    <script src="/js/star-rating.js" type="text/javascript"></script>
	
	<link rel="stylesheet" href="/stylesheets/main.css">
	<link rel="stylesheet" href="/stylesheets/dropdown.css">
	<link rel="stylesheet" href="/stylesheets/ShowPage.css">
	<link rel="stylesheet" href="/stylesheets/jcarousel.connected-carousels.css">

</head>
<body>

<!--First-Nav Bar-->

<nav class='navbar navbar-default'>
    <div class='container-fluid'>
          <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
       <a class="navbar-brand" href="/">MZK</a> 
    
    

    </div>
        <div class='collapse navbar-collapse' id="bs-example-navbar-collapse-1">
            <ul class='nav navbar-nav navbar-right'>
                    <!--HOME-->
                    <li><a class='main-menu' href='/'>HOME</a></li>

    <li class="dropdown dropdown-large">
				<a href="#" class="dropdown-toggle main-menu" data-toggle="dropdown">PRODUCTS<b class="caret"></b></a>
				
				<ul class="dropdown-menu dropdown-menu-large row">
						<li class="col-sm-3">
							<ul class='sub-menu'>
								<li class="dropdown-header category-header"><a href='/category/all/1'>All Categories</a></li>
							</ul>
						</li>
						
						<li class="col-sm-3">
							<ul class='sub-menu'>
								<li class="dropdown-header category-header">Men's Clothing</li>
								<% categories.forEach(function(category) { %>
								    <% if(!category.main_category) { %>
								        <% if(category.parent_category.name === "Men's Clothing") { %>
									        <li><a href="/category/<%= category.name%>/1"><%= category.name%></a></li>
									    <% } %>
								    <% } %>
								<% }); %>
							</ul>
						</li>
						
						<li class="col-sm-3">
							<ul class='sub-menu'>
								<li class="dropdown-header category-header">Women's Clothing</li>
								<% categories.forEach(function(category) { %>
								    <% if(!category.main_category) { %>
								        <% if(category.parent_category.name === "Women's Clothing") { %>
									        <li><a href="/category/<%= category.name%>/1"><%= category.name%></a></li>
									    <% } %>
								    <% } %>
								<% }); %>
							</ul>
						</li>
						
						<li class="col-sm-3">
							<ul class='sub-menu'>
								<li class="dropdown-header category-header">Bags</li>
								<% categories.forEach(function(category) { %>
								    <% if(!category.main_category) { %>
								        <% if(category.parent_category.name === "Bags") { %>
									        <li><a href="/category/<%= category.name%>/1"><%= category.name%></a></li>
									    <% } %>
								    <% } %>
								<% }); %>
							</ul>
						</li>
						
						<li class="col-sm-3">
							<ul class='sub-menu'>
								<li class="dropdown-header category-header">Shoes</li>
								<% categories.forEach(function(category) { %>
								    <% if(!category.main_category) { %>
								        <% if(category.parent_category.name === "Shoes") { %>
									        <li><a href="/category/<%= category.name%>/1"><%= category.name%></a></li>
									    <% } %>
								    <% } %>
								<% }); %>
							</ul>
						</li>
						
						<li class="col-sm-3">
							<ul class='sub-menu'>
								<li class="dropdown-header category-header">Jewellery</li>
								<% categories.forEach(function(category) { %>
								    <% if(!category.main_category) { %>
								        <% if(category.parent_category.name === "Jewellery") { %>
									        <li><a href="/category/<%= category.name%>/1"><%= category.name%></a></li>
									    <% } %>
								    <% } %>
								<% }); %>
							</ul>
						</li>
				</ul>
	</li>
                <!--HOME-->
                <li><a href='#' class='main-menu'>CUSTOMER CARE</a></li>
                <li><a href='#' class='main-menu'>SELL ON US</a></li>
                <li><a href='#' class='main-menu'>ABOUT US</a></li>
                <% if(currentUser && currentUser.isAdmin) { %>
                <li><a href='/admin-control' class='main-menu'>ADMIN</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>


<!--Second-Nav Bar-->

<div class='second-navbar'>
    <div class='container-fluid'>
    <form action='/search' method='POST' class="navbar-form navbar-left">
            <div class="input-group search-group">
                  <input type="text" class="form-control" id='search-box' aria-label="Search" name='q' placeholder="Search">
                  <div class="input-group-btn">
                        
                        <button type="submit" class="btn btn-default" id='search-button'>Search</button>
                  </div>
            </div>
    </form>

        <div class='collapse navbar-collapse' id="bs-example-navbar-collapse-1">
            <ul class='nav navbar-nav navbar-right'>
                    <% if(!currentUser) { %>
                        <a href='/register'><button type="button" class="btn btn-default navbar-btn signup-btn">Sign Up</button></a>
                        <a href='/login'><button type="button" class="btn btn-default navbar-btn signin-btn">Log In</button></a>
                        <a href='/cart' class='glyphicon glyphicon-shopping-cart'><span class='badge'>0</span></a>
                    <% } else { %>
                        <a href='/profile/<%= currentUser._id%>'>Signed In as <%= currentUser.username %></a>
                        <a href='/logout'><button type="button" class="btn btn-default navbar-btn signup-btn">Log Out</button></a>
                        <a href='/profile' class='glyphicon glyphicon glyphicon-user'></a>
                        <a href='/cart' class='glyphicon glyphicon-shopping-cart'><span class='badge'><%= cart %></span></a>
                    <% } %>
            </ul>
        </div>
    </div>
</div>
